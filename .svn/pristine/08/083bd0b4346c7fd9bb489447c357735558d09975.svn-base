/* audio_search page */
.audio_search_page {
    background: #fff;
    position: relative;
    height: 100%;
}
.as_input_box {
    width: 100%;
    /* height: 0.62rem; */
    padding: 0.15rem 0 0.15rem;
    overflow: hidden;
    clear: both;
    line-height: 0.62rem;
    text-align: center;
    background: #fff;

}
.as_input_box_city {
    width: 1.52rem;
    height: 0.62rem;
    float: left;
    font-size: 0.3rem;
    color: #111;

}
.as_input_box_city_icon {
    width: 0.12rem;
    margin-left: 0.1rem;
    vertical-align: middle;
}
.as_input_box_cancel {
    width: 1.16rem;
    height: 0.62rem;
    float: left;
    font-size: 0.3rem;
    color: #388cff;
}
.as_input_box_inner {
    display: block;
    width: 4.8rem;
    height: 0.62rem;
    line-height: 0.62rem;
    background: #f2f2f2;
    border-radius: 0.31rem;
    font-size: 0.26rem;
    color: #bbb;
    text-align: center;
    border: none;
    float: left;
}
.as_input_box_inner::-webkit-input-placeholder {
    font-size: 0.26rem;
    color: #bbb;
    text-align: center;
}
.as_input_box_inner:focus {
    outline: none;
}
.as_btn_box {
    position: absolute;
    bottom: 1.72rem;
    width: 100%;
}
.as_btn_box_inner {
    margin: auto;
    width: 1.86rem;
    height: 1.86rem;
    text-align: center;
    line-height: 1.86rem;
    vertical-align: middle;
    border-radius: 50%;
    font-size: 0;
    background-image: linear-gradient(0deg, 
		#5662fc 0%, 
		#388cff 100%), 
	linear-gradient(
		#388cff, 
		#388cff);
	background-blend-mode: normal, 
		normal;
	box-shadow: 0px 0px 11px 0px 
		rgba(56, 140, 255, 0.35);
}
.as_btn_box_inner img {
    width: 0.58rem;
    display: inline-block;
    vertical-align: middle;
}

/**动效*/
@keyframes warn {
    0% {
        transform: scale(0.3);
        -webkit-transform: scale(0.3);
        opacity: 0.0;
        
    }
    25% {
        transform: scale(0.3);
        -webkit-transform: scale(0.3);
        opacity: 0.1;
    }
    50% {
        transform: scale(0.5);
        -webkit-transform: scale(0.5);
        opacity: 0.3;
    }
    75% {
        transform: scale(0.8);
        -webkit-transform: scale(0.8);
        opacity: 0.5;
    }
    100% {
        transform: scale(1);
        -webkit-transform: scale(1);
        opacity: 0.0;
    }
}

@keyframes warn1 {
    0% {
        transform: scale(0.3);
        -webkit-transform: scale(0.3);
        opacity: 0.0;
    }
    25% {
        transform: scale(0.3);
        -webkit-transform: scale(0.3);
        opacity: 0.1;
    }
    50% {
        transform: scale(0.3);
        -webkit-transform: scale(0.3);
        opacity: 0.3;
    }
    75% {
        transform: scale(0.5);
        -webkit-transform: scale(0.5);
        opacity: 0.5;
    }
    100% {
        transform: scale(0.8);
        -webkit-transform: scale(0.8);
        opacity: 0.0;
    }
}
@-webkit-keyframes "warn" {
    0% {
        transform: scale(0);
        -webkit-transform: scale(0);
        opacity: 0.0;
    }
    25% {
        transform: scale(0);
        -webkit-transform: scale(0);
        opacity: 0.1;
    }
    50% {
        transform: scale(0.1);
        -webkit-transform: scale(0.1);
        opacity: 0.3;
    }
    75% {
        transform: scale(0.5);
        -webkit-transform: scale(0.5);
        opacity: 0.5;
    }
    100% {
        transform: scale(1);
        -webkit-transform: scale(1);
        opacity: 0.0;
    }
}
.as_pulse_container {
    width: 100%;
    height: 100%;
    position: absolute;
    top: -2.3rem;
    left: 0;
}

.as_pulse {
    /* position: absolute;
    left: 2px;
    top: 2px; */
    margin: auto;
    width: 6.2rem;
    height: 6.2rem;
    
    border: 6px solid #388cff;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
    z-index: 1;
    opacity: 0;
    -webkit-animation: warn 1s ease-out;
    -moz-animation: warn 1s ease-out;
    animation: warn 1s ease-out;
    -webkit-animation-iteration-count: infinite;
    -moz-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    box-shadow: 1px 1px 30px #388cff;

}
.as_pulse1 {
    /* position: absolute;
    left: 2px;
    top: 2px; */
    margin: auto;
    width: 6.2rem;
    height: 6.2rem;
    
    border: 6px solid #388cff;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
    z-index: 1;
    opacity: 0;
    -webkit-animation: warn1 1s ease-out;
    -moz-animation: warn1 1s ease-out;
    animation: warn1 1s ease-out;
    -webkit-animation-iteration-count: infinite;
    -moz-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    box-shadow: 1px 1px 30px #388cff;
}

.as_btn_txt {
    line-height: 0.26rem;
    font-size: 0.28rem;
    color: #111;
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 5.24rem;
}